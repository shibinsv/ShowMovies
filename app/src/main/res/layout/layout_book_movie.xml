<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/createPostBottomSheet"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/createTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How many seats?"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="@dimen/_15sdp"
            android:textSize="@dimen/_18sdp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:weightSum="2"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/balconyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Balcony"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_20sdp"/>
            <TextView
                android:id="@+id/balconyRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs:150"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_20sdp"/>

            <TextView
                android:id="@+id/balconyAvailablity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_20sdp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/firstClassTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="First-Class"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_20sdp"/>
            <TextView
                android:id="@+id/firstClassRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs:120"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_20sdp"/>

            <TextView
                android:id="@+id/firstClassAvailablity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_20sdp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/selectSeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select seats"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"/>

</LinearLayout>